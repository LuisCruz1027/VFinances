<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/arrowBackNoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/transparent_orange"
                app:icon="@drawable/baseline_arrow_back_ios_24"
                app:iconSize="35dp"
                app:iconTint="@color/orange" />

            <TextView
                android:id="@+id/notificationsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_black"
                android:text="@string/notifications_text"
                android:textColor="@color/orange"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/notificationsMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/navigation_shape"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center|top"
                android:text="@string/notifications_message"
                android:textColor="@color/gray"
                android:textSize="24sp" />

            <Button
                android:id="@+id/dismissButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@color/transparent_orange"
                android:fontFamily="@font/nunito"
                android:text="@string/dismiss_button"
                android:textColor="@color/orange"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>