<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".insightsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_black"
        android:text="Your Habits"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:backgroundTint="#777676"
        android:drawableLeft="@drawable/baseline_videogame_asset_24"
        android:fontFamily="@font/nunito_black"
        android:paddingTop="0dp"
        android:text="You mostly spend more on entertainment"
        android:textColor="#000000"
        android:textSize="27sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:backgroundTint="#FE850A"
        android:drawableLeft="@drawable/baseline_local_fire_department_24"
        android:fontFamily="@font/nunito_black"
        android:text="You usually spend more arount the month of December"
        android:textColor="#000000"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_black"
        android:text="Set Saving Goal"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:backgroundTint="#C604C0"
        android:drawableLeft="@drawable/baseline_align_vertical_bottom_24"
        android:fontFamily="@font/nunito_black"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:text="Set goals for future purchases and for future situations"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_black"
        android:text="Financial Advice"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:backgroundTint="#D3D3D3"
        android:drawableLeft="@drawable/baseline_menu_book_24"
        android:fontFamily="@font/nunito_black"
        android:paddingLeft="35dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="Get financial advice on reputable websites"
        android:textColor="#000000"
        android:textSize="27sp"
        app:iconPadding="0dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_black"
        android:text="Investments"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:backgroundTint="#017E36"
        android:drawableLeft="@drawable/baseline_currency_bitcoin_24"
        android:fontFamily="@font/nunito_black"
        android:paddingLeft="35dp"
        android:text="Learn more on how to invest"
        android:textColor="#000000"
        android:textSize="27sp" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:navigationIcon="@drawable/baseline_lightbulb_24"
        app:navigationIconTint="#FE850A" />

</LinearLayout>